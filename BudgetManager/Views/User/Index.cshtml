@model IEnumerable<BudgetManager.Models.User>

@{
    ViewBag.Title = "Index";
}

    <style>
        #Tworz {
            padding-bottom: 40px;
        }
        #Tworz:hover{
            background-color: transparent !important;
        }
        #tytul {
            padding-top: 20px;
            padding-bottom: 20px;
        }
        #tab{
            background-color: rgba(238, 242, 233,.7);

        }
    </style>

<h1 id="tytul">Użytkownicy</h1>

<p >
    <h3 id="Tworz">  @Html.ActionLink("Dodaj nowego użytkownika", "Create")</h3> 
</p>
<table class="table table-hover" id="tab">
    <tr>
        <th>
           Nazwa Użytkownika:
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NazwaUzyt)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.ID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
