@model BudgetManager.Models.User

@{
    ViewBag.Title = "Delete";
}

<style>
    #usun {
        background-color: red;
       transform: translateX(65%)
    }

    #us {
        transform: translate(46%,0%);
        padding-top: 30px;
    }

    #po {
        transform: translate(20%,0%);
    }

    #op {
        transform: translate(35%, 0%);
    }

    #dol {
        transform: translateX(8%);
    }

    #g {
       
    }
    #jj{
        color: black;
    }
</style>

<h2 id="us">Usuń</h2>

<h1 id="po">Czy na pewno usunąć wybranego użytkownika? </h1>

<h2 id="g">UWAGA! Wraz z użytkownikiem zostaną usunięte wszystkie przypisane do niego wydatki.</h2>
<div id="op">
  
    <hr />
    <dl class="dl-horizontal" id="jj">
        <dt>
            <h3> Nazwa użytkownika:   </h3> 
        </dt>

        <dd>
            <h3>  @Html.DisplayFor(model => model.NazwaUzyt)</h3>   
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" id="dol">
            <input type="submit" value="Usuń" id="usun" class="btn btn-default" /> |
            <h3> @Html.ActionLink("Powrót do listy", "Index") </h3>  
        </div>
    }
</div>
