<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Budżet domowy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #mon{
            color:black;
             border-top-color: darkmagenta;
        }
        #pasek{
            border-bottom-color: darkmagenta;
            
        }

 


    </style>
</head>
<body  style=" background-image: url('../../Content/images/pienionszki.jpg');
    " >
    <div class="navbar navbar-inverse navbar-fixed-top" id="pasek">
        <div class="container" >
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar" ></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Budżet Domowy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav"  >
                    <li id="ll"  >@Html.ActionLink("Użytkownicy", "Index", "User")</li>
                    <li>@Html.ActionLink("Wydatki", "Index", "Expense")</li>
                    <li>@Html.ActionLink("Zarządzaj budżetami", "Index", "Budget")</li>


                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" id="stopka">
        @RenderBody()
        <hr />
        <footer >
            <p id="mon"> @DateTime.Now.Year - Monika Czajkowska</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

